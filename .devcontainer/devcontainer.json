{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/julialang/devcontainer-features/julia:1": {
      "channel": "release",
    },
    "ghcr.io/prulloac/devcontainer-features/latex:1": {
      "scheme": "minimal",
      "packages": [
        "algorithms",
        "algorithmicx",
        "amscls",
        "amsmath",
        "chktex",
        "cleveref",
        "cm-super",
        "doublestroke",
        "epstopdf-pkg",
        "etoolbox",
        "eulervm",
        "float",
        "fpl",
        "geometry",
        "gitinfo",
        "hyperref",
        "infwarerr",
        "kvoptions",
        "kvsetkeys",
        "latexindent",
        "letltxmacro",
        "ltxcmds",
        "mathpazo",
        "microtype",
        "natbib",
        "palatino",
        "pgfplots",
        "subdepth",
        "todonotes",
        "thmtools",
        "tikzscale",
        "url",
        "xstring",
        "xurl",
      ],
    }
  },
  "postCreateCommand": "(echo 'y' | sudo cpan) && bash -c 'sudo cpan -T YAML::Tiny File::HomeDir' && cp .config/hooks/* .git/hooks/ && chmod +x .git/hooks/*",
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Set *default* container specific settings.json values on container create.
      "settings": {
        "editor.formatOnSave": true,
      },
      "extensions": [
        "valentjn.vscode-ltex"
      ]
    }
  },
}
